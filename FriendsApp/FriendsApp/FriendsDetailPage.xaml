<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FriendsApp.FriendsDetailPage">

  <ContentPage.Content>
    <StackLayout x:Name="FriendLayout" Orientation="Vertical">
      <StackLayout x:Name="MainInfo" Orientation="Horizontal">
        <Label x:Name="lblName" Text="Name"></Label>
        <Image x:Name="imgFriend" 
                 HeightRequest ="150" WidthRequest="150"> </Image>
      </StackLayout>
      <StackLayout x:Name="LocationInfo" Orientation="Vertical">
        <Label Text="Map"></Label>
        <StackLayout x:Name="Interacable" Orientation="Horizontal">
          <Label Text="Numbers"></Label>
          <Button Text="Find"></Button>
        </StackLayout>
      </StackLayout>
      <StackLayout x:Name="CallAndDial" Orientation="Horizontal">
        <Button Text="Call" Clicked="Call_Button_OnClicked"></Button>
        <Button Text="SMS" Clicked="SMS_Button_OnClicked"></Button>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>

</ContentPage>